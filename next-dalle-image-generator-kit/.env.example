# Database (Supabase PostgreSQL)
# Get this from your Supabase project settings > Database > Connection string
DATABASE_URL="postgresql://postgres.xxxxx:[YOUR-PASSWORD]@aws-0-[region].pooler.supabase.com:5432/postgres"

# Clerk Authentication
# Get these from your Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/generate
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/generate

# OpenAI (DALLÂ·E 3 API)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxx

# AWS S3 (for image storage)
# Create an IAM user with S3 permissions and get these credentials
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-dalle-images-bucket